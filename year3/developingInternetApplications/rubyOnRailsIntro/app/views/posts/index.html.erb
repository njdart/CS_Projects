<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.get_body_short %></td>
        <td><%= "#{post.user.full_name} (id #{post.user.id})"%></td>
        <td><%= link_to 'Show', post, { class: 'btn btn-default', role: 'button' } %></td>
        <td><%= link_to 'Edit', edit_post_path(post), { class: 'btn btn-default', role: 'button' } %></td>
        <td><%= link_to 'Destroy', post, { class: 'btn btn-danger', role: 'button', method: :delete, data: { confirm: 'Are you sure?' } } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New Post', new_post_path, { class: 'btn btn-primary' } %>
<br>
<%= will_paginate @posts %>
<br>
